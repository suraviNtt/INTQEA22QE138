package project_name.reders;

import java.io.File;
import java.io.FileReader;
import java.io.IOException;
import java.io.Reader;
import java.util.Properties;

public class PropertyReader {

	public static void main(String[] args) throws IOException {
		
		Properties prop = new Properties();
		//get current project location
		String currentProjectLocation = System.getProperty("user.dir");
		//file path inside project
		String  propertiesFileLocation = "/src/main/resources/config.properties";
		// full path of file location
		String filepath = currentProjectLocation + propertiesFileLocation;
		
		Reader file = new FileReader(filepath);
		prop.load(file);
		
		System.out.println(prop.get("browser")); 
	}
}
